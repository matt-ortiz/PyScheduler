# PyScheduler Environment Configuration

# Basic Configuration
PYSCHED_DATA_PATH=./data
PYSCHED_SECRET_KEY=your-secret-key-change-me-in-production
PYSCHED_DEBUG=false

# Security Settings
PYSCHED_DEFAULT_API_KEY=your-default-api-key-change-me
PYSCHED_RATE_LIMIT_ENABLED=true
PYSCHED_DEFAULT_SCRIPT_TIMEOUT=300
PYSCHED_DEFAULT_MEMORY_LIMIT=512

# Email Notifications (Optional)
SMTP_SERVER=mail.smtp2go.com
SMTP_PORT=2525
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=pyscheduler@example.com

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

